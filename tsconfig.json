{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitThis": false,
        "noUnusedLocals": false,
        "removeComments": true,
        "sourceMap": true,
        "strict": false,
        "target": "es5",
        "declaration": true,
        "outDir": "dist"
    },
    "compileOnSave": false,
    "buildOnSave": false
}
